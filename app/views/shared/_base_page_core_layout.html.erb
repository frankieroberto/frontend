<style media="screen">
  .margin-bottom-1 {
    margin-bottom: 3rem;
  }
  .margin-top-3 {
    margin-top: 5rem;
  }
</style>
<main id="content" role="main" class="column-two-thirds">
  <% context = context if local_assigns.include?(:context) %>
  <%= render "govuk_component/title", {
    context: context,
    title: title
  } %>
  <%= render :partial => 'beta_label' if publication.in_beta %>
  <%= yield %>
  <%= render 'shared/publication_metadata', :publication => publication %>
</main>

<% if @navigation_helpers %>
  <div class="column-one-third margin-top-3">
    <% if present_new_navigation? %>
      <%= render partial: 'govuk_component/taxonomy_sidebar', locals: navigation_helpers.taxonomy_sidebar %>
    <% else %>
      <%= render partial: 'govuk_component/related_items', locals: navigation_helpers.related_items %>
    <% end %>
  </div>
<% end %>
